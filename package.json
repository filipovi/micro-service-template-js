{
  "name": "micro-service-template",
  "version": "1.0.0",
  "description": "Template de micro-service en Node.js",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "heroku-postbuild": "npm run build",
    "start": "nodemon",
    "inspect": "nodemon --inspect src/app.ts",
    "test": "jest",
    "lint": "npm run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js --fix",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ma-residence/micro-service-template-js.git"
  },
  "author": "Ensembl",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/ma-residence/micro-service-template-js/issues"
  },
  "homepage": "https://github.com/ma-residence/micro-service-template-js#readme",
  "dependencies": {
    "@types/swagger-ui-express": "^3.0.1",
    "body-parser": "^1.18.2",
    "client-oauth2": "^4.2.5",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "swagger-ui-express": "^4.0.7",
    "typedi": "^0.8.0",
    "typescript": "^3.5.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.8",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.14.8",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": ["npm run lint:fix", "git add"],
    "*.js": ["npm run lint:fix", "git add"]
  }
}
